{
    "name": "@scanner/contracts",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "build": "hardhat compile",
        "clean": "hardhat clean && rm -rf typechain-types",
        "typecheck": "tsc --noEmit",
        "lint": "echo 'No lint configured'",
        "deploy:fuji": "hardhat run scripts/deploy.ts --network fuji",
        "deploy:mainnet": "hardhat run scripts/deploy.ts --network avalanche",
        "verify": "hardhat verify --network"
    },
    "devDependencies": {
        "@nomicfoundation/hardhat-toolbox": "^5.0.0",
        "@openzeppelin/contracts": "^5.1.0",
        "hardhat": "^2.22.0",
        "typescript": "^5.7.0"
    }
}